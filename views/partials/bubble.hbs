<div class="item animation-target" data-playlist-id="{{id}}">
    {{#if imageSrc}}
        <img alt="{{title}}" class="innerItem" src='{{imageSrc}}' />
        <p class="innerText">{{title}}</p>
    {{else}}
        <img alt="{{title}}" class="innerItem" src='assets/grey.png' />
        <p class="innerText" style="opacity:1">{{title}}</p>
    {{/if}}
</div>